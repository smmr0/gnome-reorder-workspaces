{
	"extends": "eslint:recommended",
	"env": {
		"es2019": true // https://gitlab.gnome.org/GNOME/gjs/-/blob/gnome-3-38/doc/Home.md#L3
	},
	"parserOptions": {
		"sourceType": "script"
	},
	"reportUnusedDisableDirectives": true,
	"rules": {
		"array-callback-return": [
			"error"
		],
		"arrow-spacing": [
			"error"
		],
		"block-scoped-var": [
			"error"
		],
		"curly": [
			"error",
			"all"
		],
		"dot-notation": [
			"error"
		],
		"eqeqeq": [
			"error"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-alert": [
			"error"
		],
		"no-console": [
			"error"
		],
		"no-eval": [
			"error"
		],
		"no-implied-eval": [
			"error"
		],
		"no-multi-spaces": [
			"error"
		],
		"no-script-url": [
			"error"
		],
		"no-undef": [
			"off"
		],
		"no-unused-vars": [
			"error",
			{
				"varsIgnorePattern": "^_"
			}
		],
		"no-var": [
			"error"
		],
		"prefer-arrow-callback": [
			"error"
		],
		"prefer-const": [
			"error"
		],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"space-in-parens": [
			"error",
			"never"
		]
	}
}
